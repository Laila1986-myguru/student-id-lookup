<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student ID Download</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; }
        input { padding: 10px; width: 250px; margin-top: 20px; }
        button { padding: 10px; margin-top: 10px; cursor: pointer; }
        img { margin-top: 20px; max-width: 100%; height: auto; display: none; }
    </style>
</head>
<body>
    <h2>Search for Your Student ID</h2>
    <input type="text" id="studentName" placeholder="Enter your name">
    <button onclick="searchID()">Search</button>
    <br>
    <img id="studentImage" src="" alt="Student ID">
    <br>
    <a id="downloadLink" href="#" download style="display:none;">Download ID</a>

    <script>
        const students = {
            "LAILA ZAINAL": "LS001",
            "MAILE BALISACAN": "LS002",
            "NURIZATUL ALI": "LS003",
            "EMELDA ALI": "LS004"
        };

        function searchID() {
            let name = document.getElementById("studentName").value.toUpperCase().trim();
            let id = students[name];
            if (id) {
                let imageUrl = `https://drive.google.com/uc?export=view&id=YOUR_FILE_ID_${id}`;
                document.getElementById("studentImage").src = imageUrl;
                document.getElementById("studentImage").style.display = "block";
                document.getElementById("downloadLink").href = imageUrl;
                document.getElementById("downloadLink").style.display = "inline-block";
                document.getElementById("downloadLink").innerText = "Download ID";
            } else {
                alert("Student not found!");
            }
        }
    </script>
</body>
</html>
